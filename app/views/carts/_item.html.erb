<tr>
  <td>
    <%= image_tag product.image.tiny.url %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol product.price %>
  </td>
  <td>
    <%= button_to ' - ', remove_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-danger' unless ordered %>
    <%= quantity %>
    <%= button_to ' + ', add_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-success' unless ordered %>
  </td>
  <td>
    <%= humanized_money_with_symbol product.price * quantity %>
  </td>
</tr>
